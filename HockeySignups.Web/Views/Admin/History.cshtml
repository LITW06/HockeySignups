@using HockeySignups.Data
@using HockeySignups.Web.Models
@model HistoryViewModel


<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h3>Event History</h3>
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>Date</th>
                <th>Signups</th>
                <th>Details</th>
            </tr>
            @foreach (var e in Model.Events)
            {
                <tr>
                    <td>@e.Event.Date.ToShortDateString()</td>
                    <td>@e.SignupCount / @e.Event.MaxPeople</td>
                    <td>
                        <a href="/admin/eventdetails?id=@e.Event.Id" class="btn btn-primary">View Details</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>


